{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake -S ${workspaceFolder} -B ${workspaceFolder}/build",
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "CMake: Build",
      "type": "shell",
      "command": "cmake --build ${workspaceFolder}/build -- -j",
      "group": "build",
      "dependsOn": "CMake: Configure",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run example",
      "type": "shell",
      "command": "${workspaceFolder}/build/example_adc",
      "group": "none",
      "presentation": {"echo": true, "reveal": "always"}
    }
  ]
}
